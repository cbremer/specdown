{
  "name": "specdown",
  "version": "0.0.46",
  "description": "SpecDown: A lightweight, browser-based markdown viewer with enhanced diagram navigation capabilities",
  "main": "desktop/main.js",
  "scripts": {
    "desktop": "electron .",
    "desktop:build": "electron-builder --mac dmg",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:verbose": "jest --verbose",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "version": "node scripts/sync-version.js && git add markdown-viewer/app.js README.md"
  },
  "keywords": [
    "markdown",
    "viewer",
    "mermaid",
    "diagrams",
    "documentation"
  ],
  "author": "Chris Bremer",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.1.5",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "markdown-viewer/**/*.js",
      "!markdown-viewer/**/*.test.js",
      "!markdown-viewer/**/*.spec.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 50,
        "branches": 45,
        "functions": 50,
        "lines": 50
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "build": {
    "appId": "com.specdown.desktop",
    "productName": "Specdown Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "desktop/**/*",
      "markdown-viewer/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.developer-tools"
    },
    "dmg": {
      "title": "Specdown Desktop"
    }
  },
  "dependencies": {
    "@highlightjs/cdn-assets": "^11.9.0",
    "@panzoom/panzoom": "^4.5.1",
    "electron-store": "^11.0.2",
    "marked": "^11.1.1",
    "mermaid": "^10.6.1"
  }
}
